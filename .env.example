# NewsLens example environment variables
# Copy this file to `.env.local` and populate with real values for local development

# OpenAI API key (server-side only). Required if USE_MOCK_LLM is false.
OPENAI_API_KEY=

# Use mock LLM for local development to avoid cost. Set to `false` to call OpenAI.
USE_MOCK_LLM=true

# Supabase settings (used server-side for saving results)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGci...service_role_key_here

# Optional: Public/Client anon key for client-side UI if needed (RLS must be configured)
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Public base url used by client-side pages to construct absolute API URLs (optional)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Optional model override for production/testing. If not set, analyze endpoint uses 'gpt-4o-mini' by default.
OPENAI_MODEL=gpt-4o-mini
